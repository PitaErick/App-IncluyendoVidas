<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            app:srcCompat="@drawable/company_logo" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textAlignment="center"
                android:textColor="@color/mainAzulPtrl"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescripcionLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luz y Vida ofrece recursos y tecnologías asistivas para personas con discapacidad visual. Los servicios incluyen entrenamiento en el uso de dispositivos de asistencia, orientación y movilidad, así como talleres de habilidades para la vida diaria."
                android:textAlignment="textStart" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Direccion:  "
                android:textColor="@color/mainAzulPtrl"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDireccionLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle Visión 606, Distrito Tecnológico" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Horario:  "
                android:textColor="@color/mainAzulPtrl"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHorarioLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunes-Sábado de 10:00 a.m.-6:00 p.m." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Contacto:  "
                android:textColor="@color/mainAzulPtrl"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContactoLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(555) 678-9012" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Calificación:"
                android:textColor="@color/mainAzulPtrl"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rtgResenaLugar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="1.0"
                android:scaleX="0.5"
                android:scaleY="0.5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>